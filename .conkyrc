### Conky configuration file
## Output is printed to the console -> i3bar
# Modified: 27.11.2011 - mseed : http://www.fastlinux.eu

out_to_x no
own_window no
out_to_console yes
background no
max_text_width 0

# Update interval in seconds
update_interval 1.0

# This is the number of times Conky will update before quitting.
# Set to zero to run forever.
total_run_times 0

# Shortens units to a single character (kiB->k, GiB->G, etc.). Default is off.
short_units yes

# How strict should if_up be when testing an interface for being up?
# The value is one of up, link or address, to check for the interface
# being solely up, being up and having link or being up, having link
# and an assigned IP address. 
if_up_strictness address

# Add spaces to keep things from moving about?  This only affects certain objects.
# use_spacer should have an argument of left, right, or none
use_spacer left

# Force UTF8? note that UTF8 support required XFT
override_utf8_locale no

# number of cpu samples to average
# set to 1 to disable averaging
cpu_avg_samples 2

## Stuff after 'TEXT' will be formatted on screen
TEXT
# Free space on /home
[{"full_text" : "/home ${fs_free /home}" , "color" : "\#ffffff" },
# Ethernet status
{"full_text" : "${if_up eth0}eth0 ${addr eth0} ${endif}" , "color" : "\#ffffff" },
# Wireless status
{"full_text" : "${if_up wlan0}wlan0 ${addr wlan0} ${wireless_link_bar wlan0} ${endif}" , "color" : "\#ffffff" },
# RAM in use
{"full_text" : "RAM ${memperc}%" , "color" : "\#ffffff" },
# Battery
{"full_text" : "Battery: ${if_match ${battery_percent BAT1} <= 15}${blink ${battery_percent BAT1}}${endif} ${if_match ${battery_percent BAT1} > 15}${battery_percent BAT1}${endif}% remaining" , "color" : "${if_match ${battery_percent BAT1} <= 9}\#ff0000${endif}${if_match ${battery_percent BAT1} >= 10}${if_match ${battery_percent BAT1} <=49}\#ff9900${endif}${endif}${if_match ${battery_percent BAT1} >= 50}${if_match ${battery_percent BAT1} <=79}\#ffff00${endif}${endif}${if_match ${battery_percent BAT1} >= 80}${if_match ${battery_percent BAT1} <=99}\#00ff00${endif}${endif}${if_match ${battery_percent BAT1} >= 100}\#ffffff${endif} %" },
# Weather temperature
{"full_text" : "${exec weather --headers="Temperature" -qm esgp | awk '/Temperature/ {print $2}'}C ${exec weather --headers="Weather" -qm esgp | awk '/Weather/ {print $2}'}, ${exec weather --headers="Sky conditions" -qm esgp | awk '/Sky conditions/ {print $3 " " $4}'} ${exec weather --headers="Wind" -qm esgp | awk '{$8=$8"/3.6"} /Wind/ {print $8}' | bc}m/s" , "color" : "\#ffffff" },
# Volume %
#Vol: ${mixer}
{"full_text" : "â™ª ${exec pactl list sinks | grep "Volume: 0"| tail -n 1 | awk '{print substr($3, 1, index($3, "%") - 1)}'}%" , "color" : "\#ffffff" },
{"full_text" : "${time %a %d.%b.%Y %H:%M}" , "color" : "\#ffffff" }
],
