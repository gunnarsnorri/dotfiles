#CUSTOM KEYBINDINGS

bindsym $MOD+b exec vivaldi
#bindsym $MOD+shift+b exec eclipse
bindsym Mod1+Ctrl+l  exec i3lock -c 000000
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle && pkill -SIGRTMIN+10 i3blocks
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +2% && pkill -SIGRTMIN+10 i3blocks
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -2% && pkill -SIGRTMIN+10 i3blocks
bindsym $MOD+F1 exec --no-startup-id pactl set-sink-mute 0 toggle && pkill -SIGRTMIN+10 i3blocks
bindsym $MOD+F2 exec --no-startup-id pactl set-sink-volume 0 -2% && pkill -SIGRTMIN+10 i3blocks
bindsym $MOD+F3 exec --no-startup-id pactl set-sink-volume 0 +2% && pkill -SIGRTMIN+10 i3blocks
bindsym XF86MonBrightnessUp exec --no-startup-id brightness 1
bindsym XF86MonBrightnessDown exec --no-startup-id brightness 0
bindsym Mod1+Tab focus right
bindsym Mod1+Shift+Tab focus left
bindsym $MOD+u exec setxkbmap us
bindsym $MOD+i exec setxkbmap is
bindsym Menu exec nocommand
# Printscreen
bindsym Print exec scrot -e 'mv $f /tmp/ && gimp /tmp/$f'


#BOOT
set $mode_system System (l) lock, (e) logout, (s) suspend (r) reboot, (Shift+s) shutdown, (Esc) cancel
mode "$mode_system" {
    bindsym l exec --no-startup-id i3lock -c 000000, mode "default"
    bindsym e exec --no-startup-id i3exit logout, mode "default"
    bindsym s exec --no-startup-id systemctl suspend, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Ctrl+q mode "$mode_system"

